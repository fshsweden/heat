<h1>Listing properties</h1>

<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>Address</th>
      <th>Picture take at</th>
      <th>User</th>
      <th>Image</th>
      <th>Image filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.property_id %></td>
        <td><%= property.address %></td>
        <td><%= property.picture_take_at %></td>
        <td><%= property.user %></td>
        <td><%= property.image %></td>
        <td><%= property.image_filename %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

